<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="styles.css">
    
</head>
<body>
    
    <%- include('navbar') %>
    <div id="image-track" data-mouse-down-at="0" data-prev-percentage="0">
        <% books.forEach(book => { %>
            <a href="/books/<%=book.book_id%>">
                <img src="<%=book.img_url%>" alt="placeholder" class="image" draggable="false">
            </a>
        <% }) %>
        <a href="/books/add"><img src="/images/plus-svgrepo-com.svg" class="plus" draggable="false"></a>
    </div>
    <%- include('footer') %>
    <script src="/scripts/index.js" defer></script>
    <script src="/scripts/book.js" defer></script>
</body>
</html>